{
  "name": "pride",
  "version": "1.0.0",
  "main": "pride.min.js",
  "scripts": {
    "build": "npm run eslint && npm run esbuild:minify && npm run esbuild:regular",
    "esbuild": "npx esbuild src/index.js --bundle --format=cjs $*",
    "esbuild:minify": "npm run esbuild -- --outfile=pride.min.js --minify",
    "esbuild:regular": "npm run esbuild -- --outfile=pride.js",
    "eslint": "npx eslint src spec $*",
    "eslint:fix": "npm run lint -- --fix",
    "test": "npm run eslint && npx mocha --recursive './spec/**/*.spec.js'"
  },
  "dependencies": {
    "esbuild": "^0.21.4",
    "pegjs": "^0.10.0",
    "reqwest": "^2.0.5",
    "underscore": "^1.13.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "chai": "^4.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.4.3",
    "eslint-plugin-n": "^17.7.0",
    "globals": "^15.1.0",
    "jsdom": "^24.0.0",
    "mocha": "^10.4.0",
    "sinon": "^18.0.0"
  }
}
